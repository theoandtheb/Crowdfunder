<h1><%= @project.title %></h1>
<div class"descr">
	<h4 class="category"><%= @project.category %></h4><br>
	<p><%= @project.description %></p>
</div>
<div class="proj_details">


	<p> <%= number_to_currency(@project.total) %> pledged of <%= number_to_currency(@project.goal, unit: "$") %> goal</p>
	<p>Project started on <%= @project.start_date.strftime("%A %B %-d, %Y") %></p>
	<p><%= distance_of_time_in_words(Time.now, @project.end_date) %> to go</p>
</div>
<div class="pledge_amount">
	<%= render "pledges/form" %>
</div>

<p><%= link_to "See All Pledges for this Project", "/projects/#{@project.id}/pledges" %></p>
<p><%= link_to 'Return to All Projects', projects_url %></p><br />

<div class="create_comment">
	<%= render "comments/form" %>
</div>

<div class="show_comments">
	<%= link_to "Show All Comments for this Project", "/projects/#{@project.id}/comments" %>
</div>