<h1>All comments for this project</h1>

<% @projects.each do |project| %>
	<% project.@comments.each do |c| %>
		<p>Leave a comment!</p>
		<%= link_to "Comment on this project!", "projects/#{@project.id}/comments/new" %>
	<% end %>
<% end %>

<% @projects.each do |project| %>
	<% project.@pledges.each do |p| %>
		<p>Support this project!</p>
		<%= link_to "Support this project!", "projects/#{@project.id}/pledges/new" %>
	<% end %>
<% end %>